{
  "name": "vue-lib-monorepo-template",
  "version": "0.1.0",
  "description": "A monorepo template for developing Vue libraries",
  "author": "Thorsten LÃ¼nborg <thorsten@linusb.org>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "play": "pnpm -F playground dev",
    "test": "pnpm run -r test",
    "test-w": "pnpm run -r test-w",
    "test-libs": "pnpm -F '@linusborg/*' run test",
    "lint": "pnpm eslint '**/*.{vue,ts,js}' --fix",
    "build": "pnpm build-packages && pnpm build-playground && pnpm build-docs",
    "build-packages": "pnpm -r -F '@linusborg/*' run build ",
    "build-playground": "lerna run build --scope 'playground'",
    "build-docs": "pnpm -F 'docs' run build"
  },
  "lint-staged": {
    "*.{ts,js,vue}": "eslint --fix --max-warnings=0"
  },
  "devDependencies": {
    "@linusborg/eslint-config": "^0.3.0",
    "@types/node": "16.18.11",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/compiler-dom": "^3.2.45",
    "@vue/test-utils": "^2.0.0-beta.13",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.33.0",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.2.1",
    "typescript": "^4.8.0",
    "vite": "^4.0.4",
    "vitest": "^0.28.3",
    "vue": "^3.2.45",
    "vue-tsc": "^1.0.24"
  }
}
